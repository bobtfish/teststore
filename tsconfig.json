{
    "include": ["**/*.ts", "**/*.tsx"],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2019"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "target": "ES2019",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["app/*"]
        },
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "sourceMap": true,
        "types": ["@remix-run/node", "vite/client"],
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "Bundler"
    }
}
